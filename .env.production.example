# ===========================================
# PRODUCTION ENVIRONMENT EXAMPLE
# IMPORTANT: Change all sensitive values before deploying!
# ===========================================

# Django Settings
# Generate a new secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY-IN-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://gameuser:STRONG_PASSWORD_HERE@db:5432/gamedb

# PostgreSQL Settings
POSTGRES_DB=gamedb
POSTGRES_USER=gameuser
POSTGRES_PASSWORD=STRONG_PASSWORD_HERE

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT Settings
# Generate a new JWT secret: openssl rand -base64 64
JWT_SECRET_KEY=CHANGE-THIS-TO-A-STRONG-JWT-SECRET-KEY
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Settings (Update with your actual domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Crypto Wallet Settings
ADMIN_USDT_TRC20_ADDRESS=YOUR-ACTUAL-TRON-WALLET-ADDRESS
TRON_API_KEY=YOUR-TRONGRID-API-KEY

# Exchange Rate (VND to USDT) - Update regularly
VND_TO_USDT_RATE=23000

# Email Settings (SMTP for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Sentry (Optional - for error tracking)
# Sign up at https://sentry.io and add your DSN here
SENTRY_DSN=

# Rate Limiting
RATELIMIT_ENABLE=True
